<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarsAndMoreApp.Views.Edit"
             xmlns:local="clr-namespace:GuitarsAndMoreApp.ViewModels"
             xmlns:models="clr-namespace:GuitarsAndMoreApp.Models" xmlns:views="clr-namespace:GuitarsAndMoreApp.Views" x:DataType="local:EditViewModels"
             FlowDirection="RightToLeft">
    <ContentPage.Content>
        <StackLayout>
            <Frame>
                <StackLayout>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="הכנס מחיר מוצר"/>
                        <Label Text="{Binding SliderValue}"/>
                        <Slider Minimum="0" Maximum="100000" Value="{Binding SliderValue}" MaximumTrackColor="LightGray" MinimumTrackColor="#c9ada7"/>
                        <Label Text="{Binding PriceError}" IsVisible="{Binding ShowPriceError}" TextColor="Red" FontAttributes="None" FontSize="Caption"/>

                        <Label Text="הכנס יישוב" Grid.Column="0" Grid.Row="1"/>
                        <Picker ItemsSource="{Binding Towns}" ItemDisplayBinding="{Binding Town1}" SelectedItem="{Binding Town}" Grid.Column="1" Grid.Row="1"/>
                        <Label Text="{Binding TownError}" IsVisible="{Binding ShowTownError}" TextColor="Red" FontAttributes="None" FontSize="Caption"  Grid.Column="1" Grid.Row="1"/>

                        <Label Text="הכנס יצרן" Grid.Column="0" Grid.Row="2"/>
                        <Picker ItemsSource="{Binding Producers}" ItemDisplayBinding="{Binding Producer1}" SelectedItem="{Binding Producer}" Grid.Column="1" Grid.Row="2"/>

                        <Label Text="הכנס דגם" Grid.Column="0" Grid.Row="3"/>
                        <Picker ItemsSource="{Binding Models}" ItemDisplayBinding="{Binding ModelName}" SelectedItem="{Binding Model}" Grid.Column="1" Grid.Row="3"/>
                        <!---בהתאם ליצרן-->

                        <Label Text="תאר את המוצר" Grid.Column="0" Grid.Row="4"/>
                        <Entry Text="{Binding Pdescription}" Placeholder="תאר את המוצר" Grid.Column="1" Grid.Row="4"/>
                        <Label Text="{Binding DescriptionError}" IsVisible="{Binding ShowDescriptionError}" TextColor="Red" FontAttributes="None" FontSize="Caption"/>

                        <Label Text="קישור לסרטון על המוצר" Grid.Column="0" Grid.Row="5"/>
                        <Entry Text="{Binding Link}" Placeholder="קישור לסרטון על המוצר"  Grid.Column="1" Grid.Row="5"/>

                        <Label Text="טלפון ליצירת קשר" Grid.Column="0" Grid.Row="6"/>
                        <Entry Text="{Binding PhoneNum}" Placeholder="טלפון ליצירת קשר" Grid.Column="1" Grid.Row="6"/>
                        <Label Text="{Binding PhoneNumberError}" IsVisible="{Binding ShowPhoneNumberError}" TextColor="Red" FontAttributes="None" FontSize="Caption"/>

                        <Button Text="Pick image" Command="{Binding PickImageCommand}"></Button>
                        <Button Text="Open camera" Command="{Binding CameraImageCommand}"/>
                        <Image x:Name="PostImage"></Image>

                        <Label Text=" לאיזו קטוגריה משתייך המוצר?" />
                        <Picker ItemsSource="{Binding Categories}" ItemDisplayBinding="{Binding Category1}" SelectedItem="{Binding Category}" />
                        <Label Text="{Binding CategoryError}" IsVisible="{Binding ShowCategoryError}" TextColor="Red" FontAttributes="None" FontSize="Caption"/>


                        <!-- Photo -->
                      
                        <!--<Image Source="{Binding UserImgSrc}" />
                    
                        <ImageButton Padding="0" Margin="0" Source="galleryIcon.png" HorizontalOptions="End" BackgroundColor="Transparent" Grid.Column="1" Grid.Row="0" Command="{Binding PickImageCommand}"/>
                        <ImageButton Padding="0" Margin="0" Source="cameraIcon.png" HorizontalOptions="Start" Grid.Column="2" Grid.Row="0" BackgroundColor="Transparent" Command="{Binding CameraImageCommand}"/>-->


                    

                    <!--<Button Text="עדכן" Command="{Binding UpdateButton}"  CornerRadius="10" BackgroundColor="#c9ada7" HorizontalOptions="Center" Margin="10"/>
                    <Label Text="{Binding Message}" HorizontalOptions="CenterAndExpand" TextColor="Red"/>-->
                        </Grid>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>