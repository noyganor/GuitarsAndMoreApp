                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>


                <Button Text="גיטרות" HorizontalOptions="Center" Grid.Row="0" Grid.Column="1" BackgroundColor="#9a8c98" CornerRadius="3" Command="{Binding CategoryPageButton}" CommandParameter="1"/>

                <Button Text="סאונד והגברה" HorizontalOptions="Center" Grid.Row="0" Grid.Column="0" BackgroundColor="#9a8c98" CornerRadius="3" Command="{Binding CategoryPageButton}" CommandParameter="2"/>

                <Button Text="קייסים לגיטרות" HorizontalOptions="Center" Grid.Row="1" Grid.Column="1" BackgroundColor="#9a8c98" CornerRadius="3" Command="{Binding CategoryPageButton}" CommandParameter="3"/>

                <Button Text="אביזרים לגיטרות" HorizontalOptions="Center" Grid.Row="1" Grid.Column="0" BackgroundColor="#9a8c98" CornerRadius="3" Command="{Binding CategoryPageButton}" CommandParameter="4"/>
