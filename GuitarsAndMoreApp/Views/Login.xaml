<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarsAndMoreApp.Views.Login"
              Title="התחברות">
    <ContentPage.Content>
        <StackLayout>
        <Label Text="היי, כיף לראותך שוב" />

        <Entry Placeholder="Email" Text="{Binding Email}"/>
        <Entry Placeholder="Password" Text="{Binding Password}"/>
        <Button Text="Login" Command="{Binding LoginButton}"/>
        <Label Text="{Binding Message}" TextColor="Red"/>
            <Button Text=" אין לך חשבון? להרשמה" Command="{Binding MoveToSignUpPage}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>