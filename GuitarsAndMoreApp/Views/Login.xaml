<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarsAndMoreApp.Views.Login"
             FlowDirection="RightToLeft">

    

    <ContentPage.Content>
        <StackLayout BackgroundColor="#ffe5d9">
            <Button Text="חזרה למסך הבית" Command="{Binding BackToHomePageButton}" />
            
            <Label Text="היי, כיף לראותך שוב" TextColor="#1b3a4b" HorizontalOptions="Center" FontAttributes="Bold"/>

            <Label Text="דואר אלקטרוני" TextColor="#3d405b" FontAttributes="None"/>
            <Entry Text="{Binding Email}"/>
            <Label Text="{Binding EmailError}" IsVisible="{Binding ShowEmailError}" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>

            <Label Text="סיסמה" TextColor="#3d405b" FontAttributes="None"/>
            <Entry Text="{Binding Password}"/>
            <Label Text="{Binding PasswordError}" IsVisible="{Binding ShowPasswordError}" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>
            
            <Button Text="התחברות" Command="{Binding LoginButton}" HorizontalOptions="Center"/>
            <Label Text="{Binding Message}" TextColor="Red"/>
            <Button Text=" אין לך חשבון? להרשמה" Command="{Binding MoveToSignUpPage}" HorizontalOptions="Center" />



        </StackLayout>
      
    </ContentPage.Content>
</ContentPage>
    
    
