<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarsAndMoreApp.Views.SignUp"
             Title="הרשמה">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#f2e9e4">

            <Label Text="דואר אלקטרוני" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>
            <Entry Text="{Binding Email}"/>
            <Label Text="{Binding EmailError}" IsVisible="{Binding ShowEmailError}" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>

            <Label Text="שם משתמש" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>
            <Entry Text="{Binding Nickname}"/>
            <Label Text="{Binding NicknameError}" IsVisible="{Binding ShowNicknameError}" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>

            <Label Text="סיסמה" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>
            <Entry Text="{Binding Password}"/>
            <Label Text="{Binding PasswordError}" IsVisible="{Binding ShowPasswordError}" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>

            <Label Text="אימות סיסמה" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>
            <Entry Text="{Binding VerPassword}"/>
            <Label Text="{Binding VerPasswordError}" IsVisible="{Binding ShowVerPasswordError}" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>

            <Button Text="הבא" Command="{Binding SignUpNextButton}" HorizontalOptions="Center" FontSize="Caption"/>
            <Label Text="{Binding Message}" TextColor="Red" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>