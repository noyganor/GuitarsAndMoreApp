<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarsAndMoreApp.Views.SignUp"
             x:Title="Sign Up">
    <ContentPage.Content>
        <StackLayout>

            <Entry Placeholder="אימייל" Text="{Binding Email}"/>
            <Entry Placeholder="שם משתמש" Text="{Binding Nickname}"/>
            <Entry Placeholder="סיסמה" Text="{Binding Password}"/>
            <Entry Placeholder="אימות סיסמה" Text="{Binding VerPassword}"/>
            
            <Button Text="הבא" Command="{Binding SignUpNextButton}"/>
            <Label Text="{Binding Message}" TextColor="Red"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>