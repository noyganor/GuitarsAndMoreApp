<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarsAndMoreApp.Views.SignUpSecondPage"
             x:Title ="Sign Up">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Phone Number" Text="{Binding PhoneNumber}"/>
            <Entry Placeholder="Gender" Text="{Binding Gender}"/>
            <Entry Placeholder="Favorite Band Or Singer" Text="{Binding FavoriteBand}"/>

            <Button Text="SUBMIT" Command="{Binding SignUpSubmitButton}"/>
            <Label Text="{Binding Message}" TextColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>