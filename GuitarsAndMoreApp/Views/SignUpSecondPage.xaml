<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuitarsAndMoreApp.Views.SignUpSecondPage"
             Title="הרשמה">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="מספר טלפון" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>
            <Entry Text="{Binding PhoneNumber}"/>

            <Label Text="מגדר" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>
            <Picker ItemsSource="{Binding Genders}" ItemDisplayBinding="{Binding Gender1}" SelectedItem="{Binding GenderID} "/>

            <Label Text="זמר או להקה אהובה" TextColor="#3d405b" FontAttributes="None" FontSize="Caption"/>
            <Entry Text="{Binding FavoriteBand}"/>

            <Button Text="שליחה" Command="{Binding SignUpSubmitButton}" HorizontalOptions="Center"/>
            <Label Text="{Binding Message}" TextColor="Red"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>